@model IEnumerable<SchoolProject.WebApplication.DTO.JobGrade>

@{
    ViewBag.Title = "JobGrade";
}

<h2>Employees Job Grade</h2>
<hr />

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.Raw("Code")</th>
                <th>@Html.Raw("Name")</th>
                <th>@Html.Raw("Status")</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.JobGradeCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JobGradeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StatusName)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>