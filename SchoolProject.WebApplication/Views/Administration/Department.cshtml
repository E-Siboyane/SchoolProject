@model IEnumerable<SchoolProject.WebApplication.DTO.Department>

@{
    ViewBag.Title = "Departments";
}

<h2>Reporting Structure Department</h2>
<hr />

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.Raw("Department Code")</th>
                <th>@Html.Raw("Organisation")</th>
                <th>@Html.Raw("Portfolio")</th>
                <th>@Html.Raw("Department")</th>
                <th>@Html.Raw("Status")</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.DepartmentCode)</td>
                    <td>@Html.DisplayFor(modelItem => item.OrganisationStructureName)</td>
                    <td>@Html.DisplayFor(modelItem => item.PortfolioName)</td>
                    <td>@Html.DisplayFor(modelItem => item.DepartmentName)</td>
                    <td>@Html.DisplayFor(modelItem => item.StatusName)</td>
                </tr>
            }
        </tbody>
    </table>
</div>