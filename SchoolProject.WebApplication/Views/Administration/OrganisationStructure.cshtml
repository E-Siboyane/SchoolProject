@model IEnumerable<SchoolProject.WebApplication.Models.StructureOrganisation>

@{
    ViewBag.Title = "OrganisationStructure";
}

<h2>Organisation Name</h2>

<table id="datatable" class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.Raw("Organisation Code")
            <th>
                @Html.Raw("Organisation Name")
            </th>
            <th>
                @Html.Raw("Status")
            <th>
                @Html.ActionLink("Create New", "Create")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrganisationCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrganisationName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusId)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {  /* id=item.PrimaryKey */  }) |
                    @Html.ActionLink("Details", "Details", new {  /* id=item.PrimaryKey */  }) |
                    @Html.ActionLink("Delete", "Delete", new {  /* id=item.PrimaryKey */  })
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>
                @Html.Raw("Organisation Code")
            <th>
                @Html.Raw("Organisation Name")
            </th>
            <th>
                @Html.Raw("Status")
            <th>
            </th>
        </tr>
    </tfoot>
</table>
