@model IEnumerable<SchoolProject.WebApplication.Models.StructureOrganisation>

@{
    ViewBag.Title = "OrganisationStructure";
}

<h2>Reporting Structure Organisation Name</h2>
<hr />

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.Raw("Organisation Code")
                <th>
                    @Html.Raw("Organisation Name")
                </th>
                <th>
                    @Html.Raw("Status")
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrganisationCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrganisationName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StatusId)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>