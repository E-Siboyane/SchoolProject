@model IEnumerable<SchoolProject.WebApplication.DTO.DocumentType>

@{
    ViewBag.Title = "DocumentType";
}

<h2>Performance Review Document Type</h2>
<hr />
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.Raw("Code")</th>
                <th>@Html.Raw("Document Type")</th>
                <th>@Html.Raw("Status")</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DocumentTypeCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DocumentTypeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StatusName)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>