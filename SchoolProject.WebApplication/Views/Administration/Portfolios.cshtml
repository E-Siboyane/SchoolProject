@model IEnumerable<SchoolProject.WebApplication.DTO.Portfolio>

@{
    ViewBag.Title = "Portfolios";
}

<h2> Reporting Structure Portfolios</h2>
<hr />

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.Raw("Portfolio Code")</th>
                <th>@Html.Raw("Organisation Code")</th>
                <th>@Html.Raw("Portfolio")</th>
                <th>@Html.Raw("Organisation")</th>
                <th>@Html.Raw("Status")</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PortfolioCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrganisationStructureCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PortfolioName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrganisationStructureName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StatusName)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>